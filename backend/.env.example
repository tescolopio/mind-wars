# Environment Configuration
NODE_ENV=development

# API Server
API_PORT=3000
API_HOST=0.0.0.0

# Socket.io Multiplayer Server
MULTIPLAYER_PORT=3001
MULTIPLAYER_HOST=0.0.0.0

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=mindwars
POSTGRES_USER=mindwars
POSTGRES_PASSWORD=mindwars_password_change_in_production

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=change_this_secret_in_production_use_long_random_string
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service (SendGrid/AWS SES)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
EMAIL_FROM=noreply@mindwars.app

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=change_this_session_secret_in_production

# Game Configuration
MAX_LOBBY_SIZE=10
MIN_LOBBY_SIZE=2
DEFAULT_VOTING_POINTS=10
TURN_TIMEOUT_HOURS=48
MAX_SKIP_VOTES=3
