# Mind Wars Beta Testing Environment Configuration
# Copy this file to .env and fill in the values

# ====== Node Environment ======
NODE_ENV=production

# ====== Database Configuration ======
POSTGRES_DB=mindwars_beta
POSTGRES_USER=mindwars
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ====== Redis Configuration ======
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ====== JWT Configuration ======
JWT_SECRET=CHANGE_ME_RANDOM_SECRET_KEY_HERE
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ====== Email Service Configuration ======
# Options: sendgrid, ses, smtp
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=YOUR_SENDGRID_API_KEY_HERE
EMAIL_FROM=noreply@eskienterprises.com

# ====== Domain Configuration ======
# Update this to match your deployment domain
DOMAIN=mwalpha.eskienterprises.com
API_URL=http://mwalpha.eskienterprises.com/api
SOCKET_URL=http://mwalpha.eskienterprises.com

# ====== CORS Configuration ======
# Comma-separated list of allowed origins, or * for all
CORS_ORIGIN=*

# ====== Grafana Configuration ======
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE
GRAFANA_URL=http://mwalpha.eskienterprises.com:3002

# ====== Optional: Grafana Plugins ======
# Comma-separated list of plugin IDs to install
GRAFANA_PLUGINS=

# ====== Beta Testing Configuration ======
# Maximum number of concurrent sessions per user
MAX_SESSIONS_PER_USER=3

# Rate limiting (requests per minute per user)
API_RATE_LIMIT=100

# Login rate limiting (attempts per 15 minutes per IP)
LOGIN_RATE_LIMIT=5

# ====== Security ======
# Generate strong passwords using:
# openssl rand -base64 32
